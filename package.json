{
  "name": "root",
  "private": true,
  "useWorkspaces": true,
  "version": "0.0.0",
  "author": "haoziqaq <357229046@qq.com>",
  "main": "index.js",
  "npmClient": "yarn",
  "workspaces": [
    "packages/*"
  ],
  "license": "MIT",
  "scripts": {
    "bootstrap": "yarn && node scripts/bootstrap.js",
    "commit": "git-cz",
    "publish": "yarn bootstrap && lerna publish"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-lerna-changelog"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "*.{ts,tsx,js,vue,less}": "prettier --write",
    "*.{ts,tsx,js,vue}": "eslint --fix",
    "*.{vue,css}": "stylelint --fix"
  },
  "eslintConfig": {
    "root": true,
    "ignorePatterns": [
      "packages/varlet-cli/lib/**",
      "packages/varlet-cli/site/**",
      "packages/varlet-ui/es/**",
      "packages/varlet-ui/cjs/**",
      "packages/varlet-ui/umd/**",
      "packages/varlet-ui/src/*/__tests__/**",
      "packages/varlet"
    ],
    "extends": [
      "@varlet"
    ]
  },
  "stylelint": {
    "extends": [
      "@varlet/stylelint-config"
    ],
    "ignoreFiles": [
      "packages/varlet-cli/lib/**",
      "packages/varlet-ui/es/**",
      "packages/varlet-ui/cjs/**",
      "packages/varlet-ui/umd/**",
      "packages/varlet-ui/site/**",
      "packages/varlet-ui/coverage/**"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "commitizen": "^4.2.2",
    "cz-lerna-changelog": "^2.0.3",
    "eslint": "^7.12.1",
    "execa": "^5.0.0",
    "husky": "^4.3.0",
    "lerna": "^3.22.1",
    "lint-staged": "^10.5.0",
    "prettier": "^2.1.2",
    "stylelint": "^13.7.2",
    "vue": "^3.0.7"
  }
}
